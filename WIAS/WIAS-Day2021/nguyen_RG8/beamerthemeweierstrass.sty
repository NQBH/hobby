\defbeamertemplate*{frametitle}{weierstrass}{%
  \nointerlineskip
  \vspace*{-.5cm}%
  \begin{beamercolorbox}[wd=\paperwidth,dp=4.2mm,left]{white}%
    \hspace*{\WIASCD@beamer@pagemargin}%
    \parbox[t][\baselineskip][t]{.85\linewidth}{%
      \color{wiasblue}%
      \fontsize{9}{10}\selectfont
      \insertframetitle
    }%
    \par
    \nointerlineskip
  \end{beamercolorbox}%
}
\defbeamertemplate*{headline}{weierstrass}{%
  \leavevmode
  \vskip .2cm%
  \null\hfill\parbox[c]{1.2cm}{\pgfuseimage{WGLLOGOHEAD}}%
  \vskip .1cm%
  \null\hfill
  \color{wiasblue!50}%
  \fontsize{9}{10}\selectfont
  \rule{\WIASCD@beamer@headrulewidth}{\WIASCD@beamer@pagerulethickness}%
  \par
  \nointerlineskip
  \vskip 1mm%
}

\defbeamertemplate*{footline}{weierstrass}{%
  \leavevmode
  \color{wiasblue}%
  \rule{\paperwidth}{3\WIASCD@beamer@pagerulethickness}%
  \vskip .92mm%
  \hspace*{\WIASCD@beamer@pagemargin}%
  \parbox[c]{10cm}{%
    \fontsize{7}{8.5}\selectfont
    \insertshorttitle\ $\cdot$\ \insertdate\ $\cdot$\ %
    \pagename\ \insertframenumber%
    \if@WIASCD@beamer@totalframes
      \ (\inserttotalframenumber)%
    \fi
  }%
  \hfill
  \parbox[c]{1.1cm}{\pgfuseimage{WIASLOGOFOOT}}%
  \vskip .58mm%
}

\defbeamertemplate*{title page}{weierstrass}{%
  \raggedright
  \nointerlineskip
  \vspace*{.667cm}%
  \parbox[t][.250\textheight]{.9\paperwidth}{%
    \parbox[b]{.45\linewidth}{%
      \hspace*{-.0275\textwidth}%
      \pgfuseimage{WIASLOGOTITLE}%
      \par
      \nointerlineskip
      \vspace{.15cm}%
      \fontsize{8}{9.5}\selectfont
      {\bfseries\WIASCD@institutename@twoline}%
    }%
    \hfill
    \parbox[b][.250\textheight][b]{.55\linewidth}{%
      \WIASCD@beamer@logos
    }%
  }%
  \par
  \nointerlineskip
  \begin{minipage}[t][.416\textheight][b]{.9\paperwidth}%
    \parbox[b]{\linewidth}{%
      \color{wiasblue}%
      \bfseries
      \fontsize{16}{19.5}\selectfont
      \raggedright
      \inserttitle
    }%
    \par
    \nointerlineskip
    \vspace{.7cm}%
    \parbox[t][2.115cm][t]{\linewidth}{%
      \raggedright
      \fontsize{10}{12.5}\selectfont
      \insertauthor
    }%
  \end{minipage}%
  \vfill
  \vspace*{-.25\baselineskip}%
  \color{wiasblue}%
  \hspace*{-.5\paperwidth}%
  \makebox[\z@][l]{\rule{1.5\paperwidth}{3\WIASCD@beamer@pagerulethickness}}%
  \\[.25\baselineskip]%
  \nointerlineskip
  \begin{picture}(0,0)%
    \parbox[t]{\linewidth}{%
      \vspace*{\z@}%
      \fontsize{7}{8.5}\selectfont
      \WIASCD@address@oneline\ $\cdot$
      Tel. \WIASCD@phoneprefix\ 0 $\cdot$ www.\WIASCD@domain\\
      \insertdate\ %
    }%
  \end{picture}%
  \par
  \nointerlineskip
}
